{
    "name": "thedigitalmedium/laravel-api-helper",
    "description": "Elevate Your Laravel API Development with the API Helper: Build High-Performance APIs with Ease (https://thedigitalmedium.com)",
    "keywords": [
        "laravel",
        "api",
        "helper",
        "dynamic-pagination",
        "tools",
        "api-helper"
    ],
    "homepage": "https://github.com/thedigitalmedium/laravel-api-helper",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Md Sultanul Arefin",
            "email": "programmer.arefin@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0|^8.1",
        "illuminate/support": "^8.0|^9.0|^10.0",
        "illuminate/http": "^8.0|^9.0|^10.0",
        "illuminate/database": "^8.0|^9.0|^10.0",
        "illuminate/container": "^8.0|^9.0|^10.0",
        "illuminate/auth": "^8.0|^9.0|^10.0"
    },
    "require-dev": {
        "tightenco/duster": "^1.2",
        "orchestra/testbench": "^6.0|^7.0|^8.0",
        "phpunit/phpunit": "^9.6"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "TheDigitalMedium\\ApiHelper\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "TheDigitalMedium\\ApiHelper\\ApiHelperServiceProvider",
                "TheDigitalMedium\\ApiHelper\\MacroServiceProvider"
            ]
        }
    },
    "scripts": {
        "fix-style": "./vendor/bin/duster fix",
        "check-code": "./vendor/bin/duster lint"
    }
}
